/* pages/user/user.wxss */

.avatar-wrap {
  background: linear-gradient(#1B827E, rgb(21, 107, 104));
  color: #fff;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
}

.avatar-wrap .avatar image {
  width: 96px;
  height: 96px;
  border-radius: 50%;
}

.avatar-wrap .vip {
  border: #ffffff77 solid 1px;
  border-radius: 4px;
  padding: 0 5px;
  color: #ffffffda;
}

.weui-tabbar:before {
  border: none !important;
}

.weui-dialog {
  box-shadow: 0 4px 20px rgba(0, 0, 0, .07);
}

.top-tabbar {
  width: 100%;
  position: fixed !important;
  left: 0;
  top: 161px;
}

.top-tabbar image {
  display: none;
}

.top-tabbar .weui-tabbar__label{
  font-size: 16px;
}

.weui-cell__icon {
  margin-right: 16px;
  vertical-align: middle;
  width: 32px;
  height: 32px;
  border-radius: 16px;
}