/* pages/freight/add.wxss */

.top-link {
  position: absolute;
  top: -30px;
  color: #07C160;
}

.size-model {
  margin-right: 176px;
}

.size-detail {
  width: 80px;
  position: absolute;
  top: 0;
  right: 92px;
}

.size-detail input {
  position: absolute;
  top: 0;
  left: 28px;
  width: 24px;
}

.round-minus,.round-plus {
  float: left;
  display: block;
  box-sizing: border-box;
  width: 24px;
  height: 24px;
  border: #07C160 solid 1px;
  border-radius: 50%;
  color: #07C160;
  text-align: center;
  line-height: 20px;
}
.round-plus {
  float: right;
}

.size-unit {
  width: 36px;
  position: absolute;
  top: 0;
  right: 36px;
}

.buy {
  position: absolute;
  top: 16px;
  right: 16px;
  color: #07C160;
}

.goods-remove {
  color: white;
  background: red;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  position: absolute;
  top: 18px;
  right: 16px;
  text-align: center;
  line-height: 16px;
  font-size: 32px;
}

.page__bd {
  padding: 20px;
}
