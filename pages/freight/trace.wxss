/* pages/freight/trace.wxss */

.timeline {
   display: block;
   background-color: #fff;
}

.timeline>.item {
    padding: 30px 15px 30px 60px;
    position: relative;
    display: block;
    z-index: 0;
}

.timeline>.item::after {
    content: "";
    display: block;
    position: absolute;
    left: 30px;
    top: 0;
    width: 1px;
    background: #ddd;
    height: 100%;
    z-index: 8;
}

.timeline>.item::before {
    content: "@";   
    display: block;
    background-color: #fff;
    width: 25px;
    height: 25px;
    font-size: 20px;
    line-height: 25px;
    text-align: center;
    position: absolute;
    left: 15px;
    border: none;
    z-index: 9;
}

.timeline>.item>.content {
    border: 1px solid #f1f1f1;
    display: block;
    line-height: 1.6;
}

.timeline>.item>.content+.content {
    margin-top: 10px;
}