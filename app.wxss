/**app.wxss**/
@import '/weui/weui-wxss/dist/style/weui.wxss';

.wxParse-p {
  padding: 10px 0;
}

.weui-cell__bd {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.weui-btn-area-padding {
  padding: 48px 16px 8px;
}

.weui-btn-area-padding2 {
  padding: 48px 0 8px;
}

.block, .wrap {
  padding: 16px;
}

.block view {
  margin-bottom: 48px;
}

.avatar {
  display: flex;
  justify-content: center;
}

.avatar image {
  width: 128px;
  height: 128px;
}

.top-welcome {
  box-sizing: border-box;
  display: block;
  height: 50px;
  margin: 20px;
  border-radius: 200px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, .07);
  /* border-bottom: #aaa dashed 1px; */
}

.top-avatar {
  display: block;
  float: left;
  width: 46px;
  height: 46px;
  margin: 2px;
  border-radius: 50%;
  overflow: hidden;
}

.top-nickname {
  color: #aaa;
  display: block;
  float: left;
  line-height: 50px;
}

.row {
  /* border-bottom: #aaa dashed 1px; */
  display: flex;
  width: 100%;
  justify-content: center;
}

.row .col {
  box-sizing: border-box;
  width: 44%;
  padding: 10px 0;
}

.col view {
  display: flex;
  justify-content: center;
}

.col image {
  height:100px;
}

.bottom-button {
  box-sizing: border-box;
  border-top: #EAEAEA solid 1px;
  background: #F7F7F7;
  display: block;
  height: 60px;
  width: 100%;
  line-height: 60px;
  color: #07C160;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 20px;
}
